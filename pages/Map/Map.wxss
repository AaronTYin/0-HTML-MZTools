page{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
}

.tab{
  flex: none;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  height: 80rpx;
}
.tabBtn{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 50%;
  font-size: 32rpx;
}
.selected{
  color: #2fcc85;
  border-bottom: 1px solid #2fcc85;
}

.Search{
  font-size: 28rpx;
  color: #666666;
  width: 100%;
  background: #eeeeeeab;
}
.inputSearch{
  display: flex;
  background: white;
  width: 91%;
  height: 60rpx;
  margin-left: 30rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  line-height: 60rpx;
  align-items: center;
  justify-content: center;
}
.inputSearch cover-image{
  height: 20rpx;
  width: 20rpx;
}
.inputSearch cover-view{
  padding-left: 3%;
}
.mapView map{
  width: 100%;
  height: 1000rpx;
}
.backCurrent{
  position: absolute;
  bottom: 220rpx;
  left: 86%;
  width: 80rpx;
  height: 80rpx;
}
.bcImg{
  width: 100%;
  height: 100%;
}

.neibor{
  background: white;
  padding: 8%;
  padding-top: 2%;
}
.neiborGroup{
  padding-bottom: 5%;
  margin-bottom: 5%;
  border-bottom: rgb(214, 214, 214) solid thin;
}
.neiborTitle{
  font-size: 36rpx;
  text-align: center;
}
.nConGroup{
  display: flex;
  padding-top: 3%;
  justify-content: center;
}
.neiborContent{
  width: 20%;
  text-align: center;
  font-size: 25rpx;
}