.city{
  background-color: rgb(233, 229, 190);
  text-align: center;
  color: grey;
}

.weather{
  overflow: hidden;
  background: #cef;
  color: #58b;
  padding-top: 5%;
  padding-bottom: 5%;
  text-align: center;
}
.main{
  margin-top: 5%;
  font-size: 12px;
}
.temperature{
  font-size: 36px;
  display: block;
}
.other{
  clear:both;
  padding-top: 5%;
  display: flex;
}
.other view{
  flex:1;
  text-align: center;
}
.border_r{
  border-right: solid 1px #bbd;
  padding-left: 3%;
  padding-right: 3%;
}
.title{
  font-size: 12px;
