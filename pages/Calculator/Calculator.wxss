page {
  height: 100%;
}
.calculator {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.calcType {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: rgb(204, 250, 199);
}
.TypeA {
  display: flex;
  flex-direction: column-reverse;
  width: 100%;
  height: 100%;
}
.show {
  display: flex;
  flex-direction: column-reverse;
  background-color: rgb(223, 222, 222);
  height: 35%;
  padding-bottom: 6%;
  margin-bottom: 1%;
}
.result {
  display: flex;
  width: 100%;
  height: 100rpx;
  font-size: 56rpx;
  margin-top: 20rpx;
}
.input {
  font-size: 60rpx;
  overflow-y: scroll;
}
.a {
  word-break: break-all;
}

.butGroup {
  display: flex;
  flex-direction: row;
  height: 700rpx;
}
.butGroupLeft {
  width: 75%;
}
.butGroupRight {
  width: 25%;
}
.butRow1,.butRow2,.butRow3,.butRow4,.butRow5 {
  display: flex;
  flex-direction: row;
  height: 20%;
}
.but {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 34%;
}
.but::after {
  border-top: thin solid black;
  border-right: thin solid black;
  border-radius: 0;
}
.butR {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 20%;
}
.butEqual {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 40%;
}
.butEqual::after,.butR::after {
  border-top: thin solid black;
  border-radius: 0;
}
