.funButGroup1,.funButGroup2,.funButGroup3 {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.iconBtn {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 0rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.iconImg {
  width: 100%;
  height: 100%;
}
.iconBtn::after {
  border: 0;
}


.waiting {
  align-content: center;
  text-align: center;
  width: 90%;
  margin-top: 120rpx;
  padding-bottom: 18rpx;
  margin-left: 4.6%;
  font-size: 32rpx;
  border-right: thin solid #8E532B;
  border-bottom: thin solid #8E532B;
  -webkit-text-fill-color: #84502C;
}
.copyright{
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 2%;
  left: 42%;
}
.copyright text{
  text-align: center;
  font-size: 22rpx;
  color: grey;
}