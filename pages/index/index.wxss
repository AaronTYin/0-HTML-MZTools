/**index.wxss**/
.funButGroup1,.funButGroup2 {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.btnTimeTask,.btnCalculator,.btnLifePlan,.btnOpenWeChat,.btnPhoneInfo {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 0rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.btnTimeTaskImg {
  width: 100%;
  height: 100%;
}
.btnOpenWeChatImg,.btnPhoneInfoImg {
  width: 110%;
  height: 90%;
}
.btnCalculatorImg,.btnLifePlanImg {
  width: 90%;
  height: 100%;
}
.btnTimeTask::after,.btnCalculator::after,.btnLifePlan::after,.btnOpenWeChat::after,.btnPhoneInfo::after {
  border: 0;
}

.waiting {
  align-content: center;
  text-align: center;
  width: 90%;
  margin-top: 180rpx;
  padding-bottom: 18rpx;
  margin-left: 4.6%;
  font-size: 32rpx;
  border-right: thin solid #8E532B;
  border-bottom: thin solid #8E532B;
  -webkit-text-fill-color: #84502C;
}